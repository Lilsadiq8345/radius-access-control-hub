# RADIUS Central Management System Environment Configuration
# =====================================================

# Supabase Configuration
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# RADIUS Server Configuration
# =====================================================
RADIUS_SERVER_PORT=1812
RADIUS_API_PORT=3001
RADIUS_SERVER_HOST=0.0.0.0
RADIUS_SERVER_SECRET=radius_secret_2024

# Default RADIUS Clients (IP:Secret:Name)
DEFAULT_RADIUS_CLIENTS=192.168.1.1:radius_secret_2024:Core Router,10.0.0.1:radius_secret_2024:Distribution Switch

# Database Configuration
# =====================================================
DATABASE_URL=postgresql://username:password@localhost:5432/radius_management
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=radius_management
DATABASE_USER=radius_user
DATABASE_PASSWORD=secure_radius_password

# Redis Configuration (Optional)
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# WebSocket Configuration
# =====================================================
WS_PORT=3002
WS_HOST=0.0.0.0

# Logging Configuration
# =====================================================
LOG_LEVEL=info
LOG_FILE=logs/radius-server.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=5

# Security Configuration
# =====================================================
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
# =====================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
# =====================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Monitoring Configuration
# =====================================================
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000
ALERT_CHECK_INTERVAL=10000

# Email Configuration (Optional)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@radiuscorp.com

# Alert Configuration
# =====================================================
ALERT_EMAILS=admin@radiuscorp.com,ops@radiuscorp.com
ALERT_WEBHOOK_URL=
ALERT_SLACK_WEBHOOK=

# Network Configuration
# =====================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
CORS_ENABLED=true
TRUST_PROXY=true

# Development Configuration
# =====================================================
NODE_ENV=development
DEBUG=radius:*
HOT_RELOAD=true

# Docker Configuration
# =====================================================
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com
DOCKER_NAMESPACE=radius

# Load Balancer Configuration
# =====================================================
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_ALGORITHM=round-robin
LOAD_BALANCER_HEALTH_CHECK_PATH=/health

# SSL/TLS Configuration
# =====================================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/radius.crt
SSL_KEY_PATH=/etc/ssl/private/radius.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# Performance Configuration
# =====================================================
MAX_CONCURRENT_CONNECTIONS=1000
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=60000

# Audit Configuration
# =====================================================
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_LEVEL=info

# API Configuration
# =====================================================
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Frontend Configuration
# =====================================================
VITE_RADIUS_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3002
VITE_APP_TITLE=RADIUS Central Management System
VITE_APP_VERSION=1.0.0

# Feature Flags
# =====================================================
ENABLE_WEBSOCKET=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_BACKUP_MANAGEMENT=true
ENABLE_SECURITY_AUDITING=true

# Maintenance Mode
# =====================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =====================================================
# END OF CONFIGURATION
# =====================================================
